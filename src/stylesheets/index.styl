*
    margin 0
    padding 0

body
    display flex
    flex-flow column wrap
    justify-content center

    background url('../assets/TMM_bg_v1_1440p_compressed.jpg') no-repeat center center fixed
    background-size cover
    font-family Verdana
    color #fff

    .page-title
        padding 2% 0
        font-weight 100
        text-align center
        text-transform uppercase
        color #fff

.nav
    flex-flow row wrap
    justify-content center

    background #000
    text-align center

    li
        display inline-block
        color #fff

    a
        display inline-block
        color #fff
        text-decoration none

    &:hover
        background-color #2c2c2c
        text-decoration underline

.main-content
    text-align center
    text-align justify
    height 80%
    p
        line-height 1.6
        color #fff
    .blurb
        text-align justify
.about
    flex-flow row wrap
    justify-content space-around
    figure
        display inline-block
    figcaption
        color #fff

.contact
    label
        color #fff
    input
        width 100%
    textarea
        width 100%
    button
        border-radius 5px
        border 2px solid green
        background-color green
        color #fff
        width 100%

.logo
    max-width 200px
    height auto
.footer
    position fixed
    bottom 2%
    border-top 1px solid #444

    p
        padding 2% 0
        text-align center
        color #fff
