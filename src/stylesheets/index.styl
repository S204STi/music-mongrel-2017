*
    margin 0
    padding 0

body
    display flex
    flex-flow column wrap
    justify-content center

    background url('../assets/TMM_bg_v1.jpeg') no-repeat center center fixed
    background-size cover
    font-family Verdana
    font-size 1em
    color #fff

  .page-title
    padding 1em 0
    font-weight 100
    font-size 4em
    text-align center
    text-transform uppercase
    color #fff

.nav
    flex-flow row wrap
    justify-content center

    background #000
    text-align center

    li
        display inline-block
        color #fff

    a
        display inline-block
        padding 1em
        color #fff
        text-decoration none

    &:hover
        background-color #2c2c2c
        text-decoration underline

.main-content
    width 40%
    margin-left 30%
    text-align center
    text-align justify
    p
        line-height 1.6
        margin-bottom 1.7em
        color #fff
    .blurb
        text-align justify
        margin-top 0.5em

.about
    flex-flow row wrap
    justify-content space-around
    figure
        display inline-block
        padding 1em
    figcaption
        color #fff

.contact
    .form-control
        padding 1em 0
    label
        color #fff
    input
        width 100%
        height 2em
    textarea
        width 100%
    button
        border-radius 5px
        border 2px solid green
        background-color green
        color #fff
        height 3em
        width 100%
        font-size 1em


.footer
    bottom 0
    border-top 1px solid #444
    padding 2em 0

    p
        text-align center
        color #fff
        font-size 0.5em

@media (max-width : 600px)
    .main-content
        width 80%
        margin-left 10%
